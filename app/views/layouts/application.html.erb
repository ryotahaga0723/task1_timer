<!DOCTYPE html>
<html>
  <head>
    <title>TimerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= link_to "タイマー", timer_path(current_user.id) %>
      <%= link_to "タイマー一覧", cookings_path(current_user.id) %>
      <%= link_to "アカウント", user_path(current_user.id) %>
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
    <% else %>
    <%= link_to "タイマー", timer_path %>
    <%= link_to "タイマー一覧", cookings_path %>  
      <%= link_to "アカウント登録", new_user_path %>
      <%= link_to "ログイン", new_session_path %>
    <% end %>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>   
    <%= yield %>
  </body>
</html>
