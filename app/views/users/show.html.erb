<section class="section">
<div class="section_inner">
  <div class= "title">
    <h1>アカウント詳細</h1>
  </div>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>   

    <table>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      <tbody>
    </table>
    <div id = "edit-user">
      <%= link_to "編集", edit_user_path %>
    </div>
  </div>
</section>